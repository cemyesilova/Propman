<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddProperty"
    android:background="@drawable/bckg">

    <ImageView
        android:layout_width="260dp"
        android:layout_height="74dp"
        android:layout_gravity="center"
        android:layout_margin="00dp"
        android:background="@drawable/prp" />
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Add Property"
        android:layout_marginBottom="50px"
        android:textSize="75px"
        android:textColor="#FF323E48"
        android:fontFamily="@font/sans_semibold"
        />

      <EditText
        android:id="@+id/propertytitle"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
          android:paddingBottom="3px"
        android:layout_marginBottom="50px"
        android:background="@drawable/button1"
        android:ems="10"
        android:fontFamily="@font/sans_bold"
        android:hint="Title"
        android:inputType="textPersonName"
        android:textColor="#FF323E48" />

    <EditText
        android:id="@+id/price"
        android:layout_width="180dp"
        android:paddingBottom="3px"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginBottom="50px"
        android:background="@drawable/button1"
        android:ems="10"
        android:hint="Price"
        android:inputType="number"
        android:textColor="#FF323E48"
        android:fontFamily="@font/sans_bold"
        />

    <EditText
        android:id="@+id/rooms"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:paddingBottom="3px"
        android:layout_gravity="center"
        android:layout_marginBottom="50px"
        android:background="@drawable/button1"
        android:ems="10"
        android:hint="Rooms(2 + 1)"
        android:inputType="textPersonName"
        android:textColor="#FF323E48"
        android:fontFamily="@font/sans_bold"/>

    <EditText
        android:id="@+id/area"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:paddingBottom="3px"
        android:layout_gravity="center"
        android:layout_marginBottom="50px"
        android:background="@drawable/button1"
        android:ems="10"
        android:hint="Area (m2)"
        android:inputType="number"
        android:textColor="#FF323E48"
        android:fontFamily="@font/sans_bold"/>

    <EditText
        android:id="@+id/address"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:paddingBottom="3px"
        android:layout_gravity="center"
        android:layout_marginBottom="50px"
        android:background="@drawable/button1"
        android:ems="10"
        android:hint="Address"
        android:inputType="textPersonName"
        android:textColor="#FF323E48"
        android:fontFamily="@font/sans_bold"/>

    <EditText
        android:id="@+id/description"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:paddingBottom="3px"
        android:layout_gravity="center"
        android:layout_marginBottom="50px"
        android:ems="10"
        android:hint="Description"
        android:background="@drawable/button1"
        android:inputType="textPersonName"
        android:textColor="#FF323E48"
        android:fontFamily="@font/sans_bold"/>

    <Button
        android:id="@+id/addimage"
        android:layout_width="140dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="ADD IMAGE"
        android:background="@color/colorAccent"
        android:fontFamily="@font/sans_bold"
        android:textColor="@color/colorAc"
        android:layout_marginBottom="2.5pt"
        />

    <Button
        android:id="@+id/addproperty"
        android:layout_width="140dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginBottom="0px"
        android:text="ADD PROPERTY"
        android:background="@color/colorAccent"
        android:fontFamily="@font/sans_bold"
        android:textColor="@color/colorAc"/>


</LinearLayout>